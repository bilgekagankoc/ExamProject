@using ExamProject.Models
@model UserModel
@{
    ViewData["Title"] = "KULLANICI GİRİŞ";
}
<div class="container-fluid d-flex justify-content-center">
    <div class="login-group border p-4">
        @using (Html.BeginForm("UserControl", "Home", FormMethod.Post))
        {
            <form>
                <h2 class="text-center">KULLANICI GİRİŞ</h2>
                <div class="form-group">
                    @*<input type="text" class="form-control" id="kullanici-adi" placeholder="Kullanıcı Adı">*@
                    @Html.TextBoxFor(model => model.KullaniciAdi, htmlAttributes: new { @class = "form-control", placeholder = "Kullanıcı Adı", type = "text" })
                </div>
                <div class="form-group">
                    @*<input type="password" class="form-control" id="sifre" placeholder="Şifre">*@
                    @Html.TextBoxFor(model => model.Sifre, htmlAttributes: new { @class = "form-control", placeholder = "Şifre", type = "password" })
                </div>
                <button type="submit" class="btn btn-primary" style="float:right">Giriş Yap</button>
            </form>
        }

    </div>
</div>


